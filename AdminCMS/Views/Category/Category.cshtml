@model AdminCMS.Core.ViewModels.CategoryViewModel

@{
    ViewBag.Title = Model.Heading;
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Kategoria</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Starter Page</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">

                    <h1>@Model.Heading</h1>

                    @using (Html.BeginForm("Category", "Category"))
                    {
                        <p class="alert alert-info mt-4 mb-4">Pola Nazwa jest wymagane.</p>

                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.Category.Id)

                        <div class="form-group">
                            @Html.LabelFor(x => x.Category.Name)
                            @Html.TextBoxFor(x => x.Category.Name, new { @class = "form-control", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(x => x.Category.Name)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Category.ParentId)
                            @Html.DropDownListFor(x => x.Category.ParentId,
                                new SelectList(Model.Categories, "Id", "Name"),
                                "-- wybierz kategorię --",
                                new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Category.ParentId)
                        </div>

                        <div class="form-check">
                            @Html.CheckBoxFor(x => x.Category.IsActive, new { @class = "form-check-input" })
                            @Html.LabelFor(x => x.Category.IsActive)
                        </div>

                        <button type="submit" class="btn btn-success btn-lg mt-2">Zapisz</button>

                    }

                </div>
            </div>
        </div>
    </div>
</div>
